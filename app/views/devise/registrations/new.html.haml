= render './recipes/header'
%div.covered{title: "logout"}
  = render './recipes/upper'
  %div.registration-content
    %h2 クックパッドにユーザー登録（無料）する
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      %span.info ログインに使用する情報
      %table.user-info
        = devise_error_messages!
        %tr.field
          %th
            メールアドレス
          %td
            = f.email_field :email, autofocus: true, class:"text"
          %br/
        %tr.field
          %th
            パスワード
            / - if @minimum_password_length
            /   %em
            /     (#{@minimum_password_length} characters minimum)
          %td
            = f.password_field :password, autocomplete: "off", class:"text"
          %br/
        %tr.field
          %th
            パスワード (確認)
          %td
            = f.password_field :password_confirmation, autocomplete: "off", class:"text"
      .actions
        = f.submit "登録する", class: "registration-button"
  = render './recipes/footer'
